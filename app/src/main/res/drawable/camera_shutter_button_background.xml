<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景の円 -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/black" />
        </shape>
    </item>
    <!-- 外側の円 -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="4dp"
                android:color="@color/white" />
            <size
                android:width="80dp"
                android:height="80dp" />
        </shape>
    </item>
    <!-- 内側の円 -->
    <item
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>
